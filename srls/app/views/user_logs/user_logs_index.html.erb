<h1>Listando Logs de <%= @user.email %></h1>
<br>
<% if @user.status%>
	<h3>Estado: Activo</h3>
<%else%>
	<h3>Estado: Inactivo</h3>
<%end%>
<br>
<table>
  <tr>
  	<th>Hora Entrada</th>
    <th>Hora Salida</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @user.user_logs.each do |user_log| %>
  <tr>
    <td><%= user_log.entrada %></td>
    <td><%= user_log.salida %></td>
  </tr>
<% end %>
</table>

